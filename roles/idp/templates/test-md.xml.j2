  {{ metadata2[lang]['mdui_displayName'] }}
  {{ metadata2[lang]['mdui_description'] }}
{% endfor %}


<?xml version="1.0" encoding="UTF-8"?>
<EntityDescriptor  xmlns="urn:oasis:names:tc:SAML:2.0:metadata" xmlns:ds="http://www.w3.org/2000/09/xmldsig#" xmlns:shibmd="urn:mace:shibboleth:metadata:1.0" xmlns:xml="http://www.w3.org/XML/1998/namespace" xmlns:mdui="urn:oasis:names:tc:SAML:metadata:ui" entityID="https://{{ ansible_hostname }}.{{ https_domain }}/idp/shibboleth">

    <IDPSSODescriptor protocolSupportEnumeration="urn:oasis:names:tc:SAML:2.0:protocol">

        <Extensions>
            <shibmd:Scope regexp="false">{{ ldap_domain }}</shibmd:Scope>
            <mdui:UIInfo>
{% for lang, value in metadata2.iteritems() %}
               <mdui:DisplayName xml:lang="{{ lang }}">{{ metadata2[lang]['mdui_displayName'] }}</mdui:DisplayName>
               <mdui:Description xml:lang="{{ lang }}">{{ metadata2[lang]['mdui_description'] }}</mdui:Description>
               <mdui:InformationURL xml:lang="{{ lang }}">{{ metadata2[lang]['mdui_infoUrl'] }}</mdui:InformationURL>
               <mdui:PrivacyStatementURL xml:lang="{{ lang }}">{{ metadata2[lang]['mdui_privacyUrl'] }}</mdui:PrivacyStatementURL>
               <mdui:Logo xml:lang="{{ lang }}" width="16" height="16">{{ metadata2[lang]['mdui_favicon'] }}</mdui:Logo>
               <mdui:Logo xml:lang="{{ lang }}">{{ metadata2[lang]['mdui_logo'] }}</mdui:Logo>
{% endfor %}
            </mdui:UIInfo>
        </Extensions>

        <KeyDescriptor use="signing">
            <ds:KeyInfo>
                    <ds:X509Data>
                        <ds:X509Certificate>
                        </ds:X509Certificate>
                    </ds:X509Data>
            </ds:KeyInfo>

        </KeyDescriptor>
        <KeyDescriptor use="signing">
            <ds:KeyInfo>
                    <ds:X509Data>
                        <ds:X509Certificate>
                        </ds:X509Certificate>
                    </ds:X509Data>
            </ds:KeyInfo>

        </KeyDescriptor>
        <KeyDescriptor use="encryption">
            <ds:KeyInfo>
                    <ds:X509Data>
                        <ds:X509Certificate>
                        </ds:X509Certificate>
                    </ds:X509Data>
            </ds:KeyInfo>

        </KeyDescriptor>

        <ArtifactResolutionService Binding="urn:oasis:names:tc:SAML:2.0:bindings:SOAP" Location="https://{{ ansible_hostname }}.{{ https_domain }}/idp/profile/SAML2/SOAP/ArtifactResolution" index="1"/>

        <!--
        <SingleLogoutService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Redirect" Location="https://{{ ansible_hostname }}.{{ https_domain }}/idp/profile/SAML2/Redirect/SLO"/>
        <SingleLogoutService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST" Location="https://{{ ansible_hostname }}.{{ https_domain }}/idp/profile/SAML2/POST/SLO"/>
        <SingleLogoutService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST-SimpleSign" Location="https://{{ ansible_hostname }}.{{ https_domain }}/idp/profile/SAML2/POST-SimpleSign/SLO"/>
        <SingleLogoutService Binding="urn:oasis:names:tc:SAML:2.0:bindings:SOAP" Location="https://{{ ansible_hostname }}.{{ https_domain }}:8443/idp/profile/SAML2/SOAP/SLO"/>
        -->

        <SingleSignOnService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST" Location="https://{{ ansible_hostname }}.{{ https_domain }}/idp/profile/SAML2/POST/SSO"/>
        <SingleSignOnService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST-SimpleSign" Location="https://{{ ansible_hostname }}.{{ https_domain }}/idp/profile/SAML2/POST-SimpleSign/SSO"/>
        <SingleSignOnService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Redirect" Location="https://{{ ansible_hostname }}.{{ https_domain }}/idp/profile/SAML2/Redirect/SSO"/>

    </IDPSSODescriptor>

    <AttributeAuthorityDescriptor protocolSupportEnumeration="urn:oasis:names:tc:SAML:2.0:protocol">
        <Extensions>
            <shibmd:Scope regexp="false">{{ ldap_domain }}</shibmd:Scope>
        </Extensions>

        <KeyDescriptor use="signing">
            <ds:KeyInfo>
                    <ds:X509Data>
                        <ds:X509Certificate>
                        </ds:X509Certificate>
                    </ds:X509Data>
            </ds:KeyInfo>

        </KeyDescriptor>
        <KeyDescriptor use="signing">
            <ds:KeyInfo>
                    <ds:X509Data>
                        <ds:X509Certificate>
                        </ds:X509Certificate>
                    </ds:X509Data>
            </ds:KeyInfo>

        </KeyDescriptor>
        <KeyDescriptor use="encryption">
            <ds:KeyInfo>
                    <ds:X509Data>
                        <ds:X509Certificate>
                        </ds:X509Certificate>
                    </ds:X509Data>
            </ds:KeyInfo>

        </KeyDescriptor>

        <AttributeService Binding="urn:oasis:names:tc:SAML:2.0:bindings:SOAP" Location="https://{{ ansible_hostname }}.{{ https_domain }}/idp/profile/SAML2/SOAP/AttributeQuery"/>

    </AttributeAuthorityDescriptor>
    <Organization>
{% for lang, value in metadata2.iteritems() %}
       <OrganizationName xml:lang="{{ lang }}">{{ metadata2[lang]['org_name'] }}</OrganizationName>
       <OrganizationDisplayName xml:lang="{{ lang }}">{{ metadata2[lang]['org_displayName'] }}</OrganizationDisplayName>
       <OrganizationURL xml:lang="{{ lang }}">{{ metadata2[lang]['org_url'] }}</OrganizationURL>
{% endfor %}
   </Organization>
{% for type, value in contacts.iteritems() %}
   <ContactPerson contactType="{{ type }}">
       <GivenName>{{ contacts[type]['givenName'] }}</GivenName>
       <SurName>{{ contacts[type]['surName'] }}</SurName>
       <EmailAddress>{{ contacts[type]['mail'] }}</EmailAddress>
   </ContactPerson>
{% endfor %}

</EntityDescriptor>
